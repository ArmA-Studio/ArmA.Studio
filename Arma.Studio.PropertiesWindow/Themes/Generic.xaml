            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Title}"/>
            <ComboBox Grid.Column="2" SelectedValue="{Binding Value}" ItemsSource="{Binding EnumValues}" DisplayMemberPath="Label" SelectedValuePath="Data"/>
